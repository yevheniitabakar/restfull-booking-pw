{
  "name": "playwright-api-fw",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "playwright test --project=regression",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --project=smoke",
    "test:negative": "playwright test --project=negative",
    "test:regression": "playwright test --project=regression",
    "allure:clean": "node scripts/cleanAllure.mjs",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report",
    "test:regression:allure": "npm run allure:clean && npm run test:regression && npm run allure:generate",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
